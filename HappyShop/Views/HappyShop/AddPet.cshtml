@model PetViewModel
@{
    ViewData["Title"] = "Add Pet";
    
}


<div class="panel panel-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <td>Name</td>
                <td>Gender</td>
                <td>Type</td>
                <td>Age</td>
                <td>Price</td>
            </tr>
        </thead>

        @foreach (var pet in Model.PetsList)
        {
            <tr>
                <td>@pet.Name</td>
                <td>@pet.Gender</td>
                <td>@pet.Type</td>
                <td>@pet.Age</td>
                <td>@pet.Price</td>
            </tr>
        }
    </table>

    <div class="panel-footer add-item-form">
        <!-- TODO: Add item form -->
    </div>
</div>
